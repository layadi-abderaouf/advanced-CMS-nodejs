                 <button class="btn-lg"><i class="fas fa-sort "></i></button>
                
            
            
            
        
         
         div( class="tab-attr")
           <table class="table-sm table-hover table-vente">
              <thead>
                <tr>
                  
                  <th scope="col">name</th>
                  <th scope="col">password</th>
                  <th scope="col">statistique</th>
                  <th scope="col">article</th>
                  <th scope="col">client</th>
                  <th scope="col">vendor</th>
                  <th scope="col">account</th>
                 
                  
                </tr>
              </thead>
              <tbody>
              for x in pro
                 <tr>
                   
                   td 
                     a(href="/user?user="+x._id) #{x.name}
                   td #{x.password}
                   if x.home == true 
                      td 
                         <i class="fas fa-check"></i>
                   if x.article == true 
                      td 
                         <i class="fas fa-check"></i>

                   if x.client == true 
                      td 
                         <i class="fas fa-check"></i>

                   if x.vendor == true 
                      td 
                         <i class="fas fa-check"></i>
                  
                   if x.account == true 
                      td 
                         <i class="fas fa-check"></i>
                  
                   
                   
                   
                 </tr>
              </tbody>
           </table>
           div( class="attributes")
             div( class="cantainer-attributes")
                form(method="POST")
                   div( class="input-group mb-3")
                     div( class="input-group-prepend")
                       
                     if data != 0
                        <input type="hidden" value=#{data._id} name="id"   placeholder="Code">
                     else
                        <input type="hidden" value="0" name="id"   placeholder="Code" >
                    
                   div( class="input-group mb-3")
                      div( class="input-group-prepend")
                        <span class="input-group-text">
                           <i class="fab fa-product-hunt"></i>
                        </span>
                      if data != 0
                         <input type="text" value=#{data.name} name="name" class="form-control" >
                      else
                         <input type="text"  name="name" class="form-control" placeholder="Username">
              
                   div( class="input-group mb-3")
                     div( class="input-group-prepend")
                       <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                     if data != 0
                        <input type="text" value=#{data.password}  name="password" class="form-control" placeholder="Passowrd">
                     else
                        <input type="text"  name="password" class="form-control" placeholder="password">
                  
                        
                   if data != 0
                       h6 statistiques
                          <input type="checkbox" value="1" name="home"  placeholder="Prix de vente">
                   else
                       h6 statistiques
                          <input type="checkbox" value="1"  name="home" class="" placeholder="paid">

                   if data != 0
                       h6 articles
                          <input type="checkbox"  value="1" name="article"  placeholder="Prix de vente">
                   else
                       h6 articles
                          <input type="checkbox" value="1"  name="article" class="" placeholder="paid">

                   if data != 0
                       h6 clients
                          <input type="checkbox" value="1" name="client"  placeholder="Prix de vente">
                   else
                       h6 clients
                          <input type="checkbox" value="1"  name="client" class="" placeholder="paid">

                   if data != 0
                       h6 fournisseurs 
                          <input type="checkbox" value="1" name="vendor"  placeholder="Prix de vente">
                   else
                       h6 fournisseurs
                          <input type="checkbox" value="1"  name="vendor" class="" placeholder="paid">

                   if data != 0
                       h6 comptes
                          <input type="checkbox" value="1" name="account"  placeholder="Prix de vente">
                   else
                       h6 comptes 
                          <input type="checkbox" value="1" name="account" class="" placeholder="paid">

                  
                  
                  
                    
                  
                    
                     
                     
